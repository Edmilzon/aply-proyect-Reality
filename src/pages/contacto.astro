      <ul class="space-y-4">
        {redes.map((red) => (
          <li>
            <a
              href={red.url}
              target="_blank"
              rel="noopener noreferrer"
              class={`flex items-center w-full p-5 rounded-xl shadow-lg hover:scale-105 transition-transform duration-300 ${red.color} text-white text-lg font-semibold text-center hover:underline`}
            >
              <span class="flex-shrink-0" set:html={red.svg}></span>
              <span class="ml-2">{red.text}</span>
