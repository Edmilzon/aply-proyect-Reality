---
const links =[
    {name: "Inicio", path: "/"},
    //{name: "Calculadora", path: "/contabilidad"},
    {name: "Flujo Financiero", path: "/financial"},
    {name: "About", path: "/about"},
    {name: "Contacto", path: "/contacto"},
];
let menuOpen = false;
function toggleMenu() {
    menuOpen = !menuOpen;
    const menu = document.getElementById('mobile-menu');
    if (menu) {
        menu.classList.toggle('hidden', !menuOpen);
    }
}
---

<nav class="backdrop-blur-md bg-slate-800/80 border-b-2 border-slate-600 shadow-[0_4px_15px_-3px_rgba(71,85,105,0.4)] relative z-50">
    <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/" class="logo-text text-3xl font-black tracking-wider text-transparent bg-clip-text bg-gradient-to-r from-emerald-400 via-teal-300 to-emerald-400 hover:from-emerald-300 hover:via-teal-200 hover:to-emerald-300 transition-all duration-500 transform hover:scale-105 relative">
            UMSS FYCT
            <span class="absolute -inset-1 bg-gradient-to-r from-emerald-400/20 via-teal-300/20 to-emerald-400/20 blur-lg"></span>
        </a>
        <!-- Botón menú hamburguesa para móvil -->
        <button class="sm:hidden flex flex-col justify-center items-center w-10 h-10 rounded focus:outline-none focus:ring-2 focus:ring-emerald-400" aria-label="Abrir menú" onclick="toggleMenu()">
            <span class="block w-7 h-0.5 bg-slate-300 mb-1"></span>
            <span class="block w-7 h-0.5 bg-slate-300 mb-1"></span>
            <span class="block w-7 h-0.5 bg-slate-300"></span>
        </button>
        <!-- Menú horizontal para escritorio -->
        <ul class="hidden sm:flex space-x-8">
            {links.map((link) =>(
                <li>
                    <a 
                        href={link.path}
                        class="text-slate-300 font-medium text-lg hover:text-emerald-300 transition-all duration-300 relative group"
                    >
                        {link.name}
                        <span class="absolute bottom-0 left-0 w-full h-0.5 bg-slate-400 transform scale-x-0 group-hover:scale-x-100 group-hover:bg-emerald-400 transition-all duration-300 glow-effect"></span>
                    </a>
                </li>
            ))}
        </ul>
    </div>
    <!-- Menú desplegable para móvil -->
    <ul id="mobile-menu" class="sm:hidden flex flex-col bg-slate-900/95 border-t border-slate-700 shadow-lg absolute w-full left-0 top-full hidden z-40">
        {links.map((link) =>(
            <li>
                <a 
                    href={link.path}
                    class="block px-6 py-3 text-slate-200 font-medium text-base hover:bg-emerald-600/20 hover:text-emerald-300 transition-all duration-200 border-b border-slate-800 last:border-b-0"
                    onclick="toggleMenu()"
                >
                    {link.name}
                </a>
            </li>
        ))}
    </ul>
</nav>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Righteous&display=swap');

    .logo-text {
        font-family: 'Righteous', cursive;
        text-shadow: 0 0 10px rgba(52, 211, 153, 0.3);
        animation: glow 2s ease-in-out infinite alternate;
    }

    @keyframes glow {
        from {
            text-shadow: 0 0 10px rgba(52, 211, 153, 0.3);
        }
        to {
            text-shadow: 0 0 20px rgba(52, 211, 153, 0.6),
                         0 0 30px rgba(52, 211, 153, 0.4);
        }
    }

    .glow-effect {
        box-shadow: 0 0 8px rgba(52, 211, 153, 0.4);
    }
</style>
<script>
    function toggleMenu() {
        const menu = document.getElementById('mobile-menu');
        if (menu) {
            menu.classList.toggle('hidden');
        }
    }
</script>