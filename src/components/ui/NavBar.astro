---
const links =[
    {name: "Inicio", path: "/"},
    {name: "Calculadora", path: "/contabilidad"},
    {name: "Flujo Financiero", path: "/financial"},
    {name: "About", path: "/about"},
    {name: "Contacto", path: "https://wa.me/59163878067"},
];
---

<nav class="backdrop-blur-md bg-slate-800/80 border-b-2 border-slate-600 shadow-[0_4px_15px_-3px_rgba(71,85,105,0.4)] relative">
    <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/" class="logo-text text-3xl font-black tracking-wider text-transparent bg-clip-text bg-gradient-to-r from-emerald-400 via-teal-300 to-emerald-400 hover:from-emerald-300 hover:via-teal-200 hover:to-emerald-300 transition-all duration-500 transform hover:scale-105 relative">
            UNIVERSIDAD MAYOR DE SAN SIMON
            <span class="absolute -inset-1 bg-gradient-to-r from-emerald-400/20 via-teal-300/20 to-emerald-400/20 blur-lg"></span>
        </a>
        <ul class="flex space-x-8">
            {links.map((link) =>(
                <li>
                    <a 
                        href={link.path}
                        class="text-slate-300 font-medium text-lg hover:text-emerald-300 transition-all duration-300 relative group"
                    >
                        {link.name}
                        <span class="absolute bottom-0 left-0 w-full h-0.5 bg-slate-400 transform scale-x-0 group-hover:scale-x-100 group-hover:bg-emerald-400 transition-all duration-300 glow-effect"></span>
                    </a>
                </li>
            ))}
        </ul>
    </div>
</nav>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Righteous&display=swap');

    .logo-text {
        font-family: 'Righteous', cursive;
        text-shadow: 0 0 10px rgba(52, 211, 153, 0.3);
        animation: glow 2s ease-in-out infinite alternate;
    }

    @keyframes glow {
        from {
            text-shadow: 0 0 10px rgba(52, 211, 153, 0.3);
        }
        to {
            text-shadow: 0 0 20px rgba(52, 211, 153, 0.6),
                         0 0 30px rgba(52, 211, 153, 0.4);
        }
    }

    .glow-effect {
        box-shadow: 0 0 8px rgba(52, 211, 153, 0.4);
    }
</style>