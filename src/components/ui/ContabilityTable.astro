---
// Importamos los componentes necesarios
import TableHeader from './table/TableHeader.astro';
import TableRow from './table/TableRow.astro';
import TableFooter from './table/TableFooter.astro';
---

<div class="w-full overflow-x-auto bg-white/10 backdrop-blur-md rounded-xl shadow-xl border border-slate-700/50">
    <div class="p-4">
        <h2 class="text-2xl font-bold text-emerald-400 mb-4">Calculadora Contable</h2>
        <div class="flex gap-4 mb-4">
            <button id="addRow" class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg transition-all">
                Agregar Fila
            </button>
            <button id="calculateTotal" class="px-4 py-2 bg-slate-700 hover:bg-slate-800 text-white rounded-lg transition-all">
                Calcular Total
            </button>
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full min-w-[800px]">
            <TableHeader />
            <tbody id="tableBody">
                <TableRow />
            </tbody>
            <TableFooter />
        </table>
    </div>
</div>

<script>
    // La lógica principal se importará desde el directorio scripts
    import { initializeTable } from '../../scripts/contability/tableLogic.js';
    
    // Inicializamos la tabla cuando el documento esté listo
    document.addEventListener('DOMContentLoaded', initializeTable);
</script>

<style>
    table {
        border-collapse: separate;
        border-spacing: 0;
    }
</style> 